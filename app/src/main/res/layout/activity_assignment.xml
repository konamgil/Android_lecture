<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignRight="@+id/btn16"
        android:layout_alignParentTop="true"
        android:background="#F5F5F5"
        android:text=""
        android:textAlignment="textEnd"
        android:textColor="@color/colorAccent"
        android:textSize="30dp" />
    <Button
        android:id="@+id/btn1"
        android:text="AC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/result"
        />
    <Button
        android:id="@+id/btn2"
        android:text="+/-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/btn1"
        android:layout_below="@+id/result"
        />
    <Button
        android:id="@+id/btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="%"
        android:layout_toRightOf="@id/btn2"
        android:layout_below="@+id/result"
        />
    <Button
        android:id="@+id/btn4"
        android:text="7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn1"
        />
    <Button
        android:id="@+id/btn5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn1"
        android:layout_toRightOf="@id/btn4"
        android:text="8" />
    <Button
        android:id="@+id/btn6"
        android:text="9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/btn5"
        android:layout_below="@id/btn1"
        />
    <Button
        android:id="@+id/btn7"
        android:text="4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn4"
        />
    <Button
        android:id="@+id/btn8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn4"
        android:layout_toRightOf="@id/btn7"
        android:text="5" />
    <Button
        android:id="@+id/btn9"
        android:text="6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn4"
        android:layout_toRightOf="@id/btn8"
        />
    <Button
        android:id="@+id/btn10"
        android:text="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn7"
        />
    <Button
        android:id="@+id/btn11"
        android:text="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn7"
        android:layout_toRightOf="@id/btn10"
        />
    <Button
        android:id="@+id/btn12"
        android:text="3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn7"
        android:layout_toRightOf="@id/btn11"
        />
    <Button
        android:id="@+id/btn13"
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn10"
        />
    <Button
        android:id="@+id/btn14"
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn10"
        android:layout_toRightOf="@id/btn10"
        />
    <Button
        android:id="@+id/btn15"
        android:text="."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn10"
        android:layout_toRightOf="@id/btn14"
        />
    <Button
        android:id="@+id/btn16"
        android:text="/"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/btn15"
        android:layout_below="@+id/result"
        />
    <Button
        android:id="@+id/btn17"
        android:text="*"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/btn15"
        android:layout_below="@id/btn16"
        />
    <Button
        android:id="@+id/btn18"
        android:text="-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/btn15"
        android:layout_below="@id/btn17"
        />
    <Button
        android:id="@+id/btn19"
        android:text="+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/btn15"
        android:layout_below="@id/btn18"
        />
    <Button
        android:id="@+id/btn20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn19"
        android:layout_toRightOf="@id/btn15"
        android:background="#FFC107"
        android:text="=" />
</RelativeLayout>